<% case params[:operation] %>
<% when 'multiply' %>
  <%= params[:number1].to_i * params[:number2].to_i %>
<% when 'divide' %>
  <%= params[:number1].to_i / params[:number2].to_i %>
<% when 'add' %>
  <%= params[:number1].to_i + params[:number2].to_i %>
<% when 'subtract' %>
  <%= params[:number1].to_i - params[:number2].to_i %>
<% end %>
